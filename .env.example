# ===========================================
# Stock Tracker - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Database
DATABASE_URL=postgresql+asyncpg://stocktracker:stocktracker@localhost:5432/stock_tracker

# Redis
REDIS_URL=redis://localhost:6379/0

# App
APP_ENV=development
DEBUG=true
SECRET_KEY=change-me-in-production-use-a-long-random-string

# APIs Externas (opcional)
BRAPI_TOKEN=

# Telegram (opcional - para alertas)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# AI Features (opcional)
AI_ENABLED=false

# Collector Intervals (minutos)
PRICE_COLLECTOR_INTERVAL=15
FUNDAMENTALS_COLLECTOR_INTERVAL=1440
NEWS_COLLECTOR_INTERVAL=30
CVM_COLLECTOR_INTERVAL=60
